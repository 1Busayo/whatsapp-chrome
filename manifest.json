{
  "name": "WhatsApp for Chrome",
  "short_name": "WhatsApp",
  "description": "Enjoy your WhatsApp for Web experience as a Chrome App",
  "version": "0.5.0",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["app/background.js"]
    }
  },
  "icons": { "128": "icon.png" },
  "permissions": [
    "webview",
    "notifications",
    "videoCapture",
    "audioCapture",
    "fileSystem",
    "storage",
    "alarms",
    "clipboardWrite"
  ],
  "webview": {
    "partitions": [
      {
        "name": "whatsapp-for-chrome",
        "accessible_resources": ["*"]
      }
    ]
  }
}