{
  "name": "WhatsApp",
  "description": "Enjoy your WhatsApp exprience as a Chrome App",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "icons": { "128": "icon.png" },
  "permissions": [
    "webview",
    "notifications",
    "videoCapture",
    "audioCapture",
    "fileSystem"
  ],
  "webview": {
    "partitions": [
      {
        "name": "whatsapp-for-chrome",
        "accessible_resources": ["a.js"]
      }
    ]
  }
}